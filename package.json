{
  "name": "clear-choice-insight",
  "version": "1.0.0",
  "description": "AI-powered Product Transparency Platform",
  "main": "index.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\" \"cd ai-service && python main.py\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:ai": "cd ai-service && python main.py",
    "install:all": "npm install && npm install --prefix frontend && npm install --prefix backend && cd ai-service && pip install -r requirements.txt",
    "clean": "rm -rf frontend/node_modules backend/node_modules ai-service/__pycache__",
    "test": "npm test --prefix backend",
    "lint": "npm run lint --prefix frontend",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "transparency",
    "ai",
    "products",
    "vercel",
    "react",
    "nodejs"
  ],
  "author": "ClearChoice Insight",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "mongodb": "^6.9.0",
    "mongoose": "^8.8.1"
  }
}
